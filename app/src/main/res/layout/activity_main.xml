<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="3"
    android:layout_columnWeight="1"
    tools:context="david.com.savedpreferences.MainActivity">

    <TextView
        android:id="@+id/row_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight=".5"
        android:layout_gravity="right"
        android:layout_rowWeight="1"
        android:padding="24dp"
        android:text="shared preferences working:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/column_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="left"
        android:layout_rowWeight="1"
        android:padding="24dp"
        android:text=""
        android:textSize="20sp" />

    <TextView
        android:id="@+id/row_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_rowWeight="1"
        android:padding="24dp"
        android:text="auto-save feature:"
        android:layout_columnWeight=".5"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/column_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="left"
        android:layout_rowWeight="1"
        android:padding="24dp"
        android:text="Hello World!"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/row_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="right"
        android:layout_rowWeight="1"
        android:padding="24dp"
        android:text="fav colour:"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/column_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_gravity="left"
        android:layout_rowWeight="1"
        android:padding="24dp"
        android:text="Hello World!"
        android:textSize="20sp" />

</GridLayout>
