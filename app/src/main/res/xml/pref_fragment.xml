<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <CheckBoxPreference
        android:defaultValue="false"
        android:key="@string/pref_working_key"
        android:summaryOff="Hidden"
        android:summaryOn="Shown"
        android:title="Preferences Working"/>

    <CheckBoxPreference
        android:defaultValue="true"
        android:key="auto_save_key"
        android:summaryOff="Off"
        android:summaryOn="On"
        android:title="Auto-save"/>

    <ListPreference
        android:defaultValue="@string/pref_colour"
        android:entries="@array/colour_name"
        android:entryValues="@array/colour_values"
        android:key="@string/pref_colour_key"
        android:title="Favourite colour"
        android:summary="Choose a colour"/>

</PreferenceScreen>